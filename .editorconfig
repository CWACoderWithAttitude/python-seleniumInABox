# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
indent_size = 3
insert_final_newline = true
file_header_template = Copyright (c) 2023 Volker Benders. All Rights Reserved. See file LICENSE in this repo for details.
trim_trailing_whitespace = true
# Do not add the following without confirming that nullable warnings and errors are still honored
# generated_code = true

[*.{py, java, json}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py, java}]
charset = utf-8

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
